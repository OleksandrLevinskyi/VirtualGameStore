@page
@model VirtualGameStore.Pages.Profile.ManagePaymentOptions.EditModel

@{
    ViewData["Title"] = "Edit Payment Option";
    ViewData["ActivePage"] = ManageNavPages.PaymentOptions;
}

<h4>Edit Payment Option</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaymentOption.CardNumber" class="control-label"></label>
                <input asp-for="PaymentOption.CardNumber" class="form-control" />
                <span asp-validation-for="PaymentOption.CardNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentOption.ExpiryDate" class="control-label"></label>
                <input asp-for="PaymentOption.ExpiryDate" class="form-control" />
                <span asp-validation-for="PaymentOption.ExpiryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentOption.HolderFirstName" class="control-label"></label>
                <input asp-for="PaymentOption.HolderFirstName" class="form-control" />
                <span asp-validation-for="PaymentOption.HolderFirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaymentOption.HolderLastName" class="control-label"></label>
                <input asp-for="PaymentOption.HolderLastName" class="form-control" />
                <span asp-validation-for="PaymentOption.HolderLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="PaymentOptions">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

