@page
@model VirtualGameStore.Pages.Cart.IndexModel

@{
    ViewData["Title"] = "Cart";
}

<h1>@ViewData["Title"]</h1>


<form method="post">
    @for (int i = 0; i < Model.CartItemInputs.Count(); i++)
    {
        var item = Model.CartItemInputs[i];

        <div class="card mb-3">
            <div class="card-body d-md-flex justify-content-between align-items-center">
                <h5 class="card-title">@item.GameName</h5>
                <div class="d-md-flex align-items-center">
                    <input type="hidden" name="CartItemInputs[@i].GameId" value="@Model.CartItemInputs[i].GameId" />

                    <div class="form-floating mb-3 mb-md-0 me-0 me-md-3">
                        <select id="game-name-select" name="CartItemInputs[@i].Quantity" class="form-select" asp-items="@Model.ItemInputSelectLists[i]">
                        </select>
                        <label for="game-name-select" class="control-label">@Html.DisplayNameFor(model => model.CartItemInputs[i].Quantity)</label>
                    </div>

                    <div class="mb-3 mb-md-0 form-check">
                        <input id="quantity-input" type="checkbox" name="CartItemInputs[@i].Remove" value="@Model.CartItemInputs[i].Remove" class="form-check-input" />
                        <label for="quantity-input" class="form-label">@Html.DisplayNameFor(model => model.CartItemInputs[i].Remove)</label>
                    </div>
                </div>
            </div>
        </div>
    }
    <button type="submit">Update Cart</button>
</form>

