@page
@model VirtualGameStore.Pages.Cart.IndexModel

@{
    ViewData["Title"] = "Cart";
}

<h1>@ViewData["Title"]</h1>

<form method="post">
    @for (int i = 0; i < Model.CartItemInputs.Count(); i++)
    {
        var item = Model.CartItemInputs[i];

        <div class="card mb-3">
            <div class="card-body d-md-flex justify-content-between align-items-center">
                <h5 class="card-title mb-4 mb-md-0">@item.GameName</h5>
                <div class="d-md-flex align-items-center">
                    <input type="hidden" asp-for="@Model.CartItemInputs[i].GameId" />

                    <div class="form-floating mb-3 mb-md-0 me-0 me-md-3">
                        <select asp-for="@Model.CartItemInputs[i].Quantity" asp-items="@Model.ItemInputSelectLists[i]" class="form-select pe-md-5 ps-md-4"></select>
                        <label asp-for="@Model.CartItemInputs[i].Quantity" class="control-label"></label>
                        <span asp-validation-for="@Model.CartItemInputs[i].Quantity" class="text-danger"></span>
                    </div>

                    <div class="form-check">
                        <input asp-for="@Model.CartItemInputs[i].Remove" class="form-check-input" />
                        <label asp-for="@Model.CartItemInputs[i].Remove" class="form-label"></label>
                    </div>
                </div>
            </div>
        </div>
    }
    <button type="submit">Update Cart</button>
</form>