@page
@model VirtualGameStore.Pages.Cart.IndexModel

@{
    ViewData["Title"] = "Cart";
}

<h1 class="mb-3">@ViewData["Title"]</h1>

@if (!Model.CartItemInputs.Any())
{
    <p>Your cart is empty</p>
}
else
{
    <form method="post">
        @for (int i = 0; i < Model.CartItemInputs.Count(); i++)
        {
            var item = Model.CartItemInputs[i];

            <div class="card mb-3">
                <div class="card-body d-md-flex justify-content-between align-items-center">
                    <div class="mb-4 mb-md-0">
                        <h5 class="card-title"><a asp-page="/Games/Details" asp-route-id="@item.GameId">@item.GameName</a></h5>
                        <span>@Html.DisplayFor(model => model.CartItemInputs[i].Price) each</span>
                    </div>
                    <div class="d-md-flex align-items-center">
                        <input type="hidden" asp-for="@Model.CartItemInputs[i].GameId" />
                        <div class="d-flex me-3">
                            <div class="form-floating mb-3 mb-md-0 me-0 me-md-3 flex-grow-1 me-2">
                                <select asp-for="@Model.CartItemInputs[i].Quantity" asp-items="@Model.ItemInputSelectLists[i]" class="form-select" style="min-width: 100px"></select>
                                <label asp-for="@Model.CartItemInputs[i].Quantity" class="control-label"></label>
                                <span asp-validation-for="@Model.CartItemInputs[i].Quantity" class="text-danger"></span>
                            </div>

                            <div class="form-floating">
                                <input asp-for="@Model.CartItemInputs[i].Total" class="form-control" readonly />
                                <label asp-for="@Model.CartItemInputs[i].Total" class="form-label"></label>
                            </div>
                        </div>

                        <div class="form-check">
                            <input asp-for="@Model.CartItemInputs[i].Remove" class="form-check-input" />
                            <label asp-for="@Model.CartItemInputs[i].Remove" class="form-label mb-md-0"></label>
                        </div>
                    </div>
                </div>
            </div>
        }
        <button type="submit" class="btn btn-primary">Update Cart</button>
    </form>
}