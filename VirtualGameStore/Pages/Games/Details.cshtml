@page
@model VirtualGameStore.Pages.Games.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Game</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.IsDigital)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.IsDigital)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Game.Stock)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Game.Stock)
        </dd>
    </dl>
</div>
<div>
    <h4>Reviews</h4>
    <p>
        <a asp-page="/Reviews/Create">Add a Review</a>
    </p>

    <p>No comments yet.</p>

    <p>Overall Rating: 4.3</p>

    @foreach (var review in Model.Game.Reviews)
    {
        <div class="card" style="width: 40rem;">
            <div class="card-body">
                <h6 class="card-title">@review.Author.FirstName @review.Author.LastName</h6>
                <input class="rating"
                   max="5"
                   step="0.5"
                   style="--value:@review.Rating"
                   type="range"
                   value="@review.Rating">
                <p class="card-text">@review.Comment</p>
            </div>
        </div>
    }
</div>
